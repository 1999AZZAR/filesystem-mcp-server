{
  "name": "filesystem-mcp-server",
  "version": "1.0.0",
  "description": "A comprehensive Model Context Protocol (MCP) server for file system operations with advanced features like file watching, search, and batch operations.",
  "author": "Azzar Budiyanto",
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "mcp",
    "filesystem",
    "file-operations",
