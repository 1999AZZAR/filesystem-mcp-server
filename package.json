    "@types/mime-types": "^2.1.4",
    "@types/node": "^20.10.0",
    "@types/unzipper": "^0.10.11",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/1999AZZAR/filesystem-mcp-server.git"
  },
  "bugs": {
